{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "logs.txt", "rollingInterval": "Infinite" }
      }
    ],
    "Properties": { "Application": "Apex.EntityExtractor" }
  },
  "Ollama": {
    "Endpoint": "http://localhost:11434",
    "TimeoutSeconds": 120,
    "TextModel": "mistral-small3.1:latest",
    "EmbeddingModel": "nomic-embed-text"
  },
  "Rag": {
    "IngestionIndex": "my_files",
    "MinRelevance": 0.0,
    "Limit": 1000,
    "MaxTokens": 4000,
    "Temperature": 0.2
  }
}
