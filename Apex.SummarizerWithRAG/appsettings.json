{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs.txt",
          "rollingInterval": "Infinite"
        }
      }
    ],
    "Properties": { "Application": "Apex.EntityExtractor" }
  },
  "Ollama": {
    "Endpoint": "http://localhost:11434",
    "TimeoutSeconds": 120,
    "TextModel": "mistral-small3.1:latest",
    "EmbeddingModel": "nomic-embed-text"
  },
  "Rag": {
    "IngestionIndex": "apex",
    "MinRelevance": 0.1,
    "Limit": 100,
    "MaxTokens": 4096,
    "Temperature": 0.2
  },
  "TextPartitioning": {
    "MaxTokensPerParagraph": 1000,
    "OverlappingTokens": 100
  }
}
