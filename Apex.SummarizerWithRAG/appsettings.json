{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Debug"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs.txt",
          "rollingInterval": "Infinite"
        }
      }
    ],
    "Properties": { "Application": "Apex.EntityExtractor" }
  },
  "Ollama": {
    "Endpoint": "http://localhost:11434",
    "TimeoutSeconds": 120,
    "TextModel": "mistral-small3.1:latest",
    "EmbeddingModel": "nomic-embed-text"
  },
  "Llama": {
    "EmbeddingModelPath": "c:\\Temp\\LLMs\\GGUF\\Embedding\\nomic-embed-text-v1.5.Q4_K_M.gguf",
    //"EmbeddingModelPath": "c:\\Temp\\LLMs\\GGUF\\Embedding\\llama-2-7b.Q3_K_M.gguf",
    "MaxTokens": "2048",
    "GpuLayerCount": -1
  },
  "Rag": {
    "EmbeddingLib": "Llama",
    //"EmbeddingLib": "Ollama",
    "IngestionIndex": "apex",
    "MinRelevance": 0.1,
    "Limit": 100,
    "MaxTokens": 2048,
    "Temperature": 0.2
  },
  "TextPartitioning": {
    "MaxTokensPerParagraph": 1024,
    "OverlappingTokens": 32
  }
}
